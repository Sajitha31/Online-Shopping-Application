<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/order_sum_bg">


    <View
        android:id="@+id/cart_pro_view"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/white_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cart_pro_img"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/cart_pro_view"
        app:layout_constraintEnd_toEndOf="@+id/cart_pro_view"
        app:layout_constraintStart_toStartOf="@+id/cart_pro_view"
        app:layout_constraintTop_toTopOf="@+id/cart_pro_view"/>

    <TextView
        android:id="@+id/cart_pro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/cart_pro_img"
        app:layout_constraintTop_toTopOf="@+id/cart_pro_view" />

    <TextView
        android:id="@+id/cart_pro_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="0"
        android:textSize="18sp"
        android:textColor="@color/color5"
        app:layout_constraintBottom_toBottomOf="@+id/cart_pro_view"
        app:layout_constraintStart_toEndOf="@+id/cart_pro_view" />

    <TextView
        android:id="@+id/cart_pro_tot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="0"
        android:textColor="@color/color5"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="@+id/cart_pro_tot">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/cart_pro_qty_add"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="+"
        android:gravity="center"
        android:background="@drawable/white_circle_bg"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cart_pro_tot"
        app:layout_constraintTop_toBottomOf="@+id/cart_pro_tot" />

    <TextView
        android:id="@+id/cart_pro_qty_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cart_pro_qty_add"
        app:layout_constraintEnd_toStartOf="@+id/cart_pro_qty_add"
        app:layout_constraintTop_toTopOf="@+id/cart_pro_qty_add" />

    <TextView
        android:id="@+id/cart_pro_qty_minus"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="12dp"
        android:text="-"
        android:background="@drawable/white_circle_bg"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/cart_pro_qty_value"
        app:layout_constraintEnd_toStartOf="@+id/cart_pro_qty_value"
        app:layout_constraintTop_toTopOf="@+id/cart_pro_qty_value" />
</androidx.constraintlayout.widget.ConstraintLayout>